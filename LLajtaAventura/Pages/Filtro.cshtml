@model LLajtaAventura.Pages.FiltroModel
@{
    ViewData["Title"] = "Buscador Dinámico";
}
<form method="post">
    <label for="searchTerm">Buscar:</label>
    <input type="text" id="searchTerm" name="SearchTerm" value="@Model.SearchTerm" />

    <label for="selectedCriteria">Criterio:</label>
    <select id="selectedCriteria" name="SelectedCriteria" asp-items="Model.Criterios">
        <!-- asp-items se usa para llenar el DropDownList con la lista proporcionada en el modelo -->
    </select>

    <button type="submit">Buscar</button>
</form>

