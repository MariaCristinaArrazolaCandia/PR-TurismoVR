@section Scripts {
<script>
	function loadMapScenario() {
		// Crear un mapa
		var map = new Microsoft.Maps.Map(document.getElementById('myMap'), {
			credentials: 'AgqOaEk-a82xj49nR5TlSVCRSO_tOw0yV3PSCnfUiD533uSOhRpQO5HaqzoYAmlh',
			center: new Microsoft.Maps.Location(-17.338097, -66.218838), // Coordenadas del centro del mapa
			zoom: 13 // Nivel de zoom inicial
		});

		// Llamar a tu API para obtener lugares
		// Supongamos que tu API devuelve una lista de lugares con propiedades 'latitude', 'longitude' y 'title'
			fetch('/TuristSiteApi')
			.then(response => response.json())
			.then(data => {
				// Agregar puntos al mapa
				data.forEach(function (location) {
					var pin = new Microsoft.Maps.Pushpin(new Microsoft.Maps.Location(location.latitude, location.longitude), {
						title: location.title
					});

					// Agregar evento de clic al marcador
					Microsoft.Maps.Events.addHandler(pin, 'click', function (e) {
						// Mostrar cuadro de información con el nombre del lugar
						var infobox = new Microsoft.Maps.Infobox(pin.getLocation(), {
							title: location.title,
							description: 'Información adicional sobre el lugar turístico: <strong>'+location.name+'</strong>'
						});
						map.entities.push(infobox);
					});

					map.entities.push(pin);
				});
			})
			.catch(error => console.error('Error fetching data:', error));
	}
</script>

<!-- Llama a la función para cargar el mapa después de obtener los lugares de la API -->
<script type='text/javascript' src='https://www.bing.com/api/maps/mapcontrol?callback=loadMapScenario' async defer></script>
}